<!-- list.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <div class="box" id="heading">
      <h1>It's <%= listTitle %></h1>
    </div>

    <div class="box">
      <% for (var i = 0; i < newListItems.length; i++) { %>
      <div class="item">
        <input type="checkbox" />
        <p><%= newListItems[i] %></p>
      </div>
      <% } %>

      <!-- Form for adding tasks to general list -->
      <form class="item" action="/add" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit">+</button>
      </form>

      <!-- Form for adding tasks to work-related list -->
      <form class="item" action="/work/add" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Work Item"
          autocomplete="off"
        />
        <button type="submit">+</button>
      </form>
    </div>
  </body>
</html>
